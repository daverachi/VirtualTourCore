@model VirtualTourCore.Core.Models.Location

@{
    ViewBag.Title = "Location Details";
}

<div>
    <hr />
    <div class="row">
        <div class="col-xs-12 alert alert-danger hidden" role="alert" id="errorMessage"></div>
        <div class="col-xs-1">
            <div class="adminHeadingText">Details</div>
        </div>
        <div class="col-xs-1">
            <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn">
                <i class="fa fa-2x fa-pencil" aria-hidden="true"></i>
            </a>
        </div>
        <div class="col-xs-1">
            <a href="@Url.Action("ClientAreas", "Area", new { cId = Model.ClientId, id = Model.Id })" class="btn" data-toggle="tooltip" title="View @Model.Name Areas">
                <i class="fa fa-2x fa-globe" aria-hidden="true"></i>
            </a>
        </div>
        <div class="col-xs-8">

        </div>
        <div class="col-xs-1">
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deletionModal">
                <i class="fa fa-2x fa-trash" aria-hidden="true"></i>
            </button>

            <!-- Modal -->
            <div class="modal fade" id="deletionModal" tabindex="-1" role="dialog" aria-labelledby="deletionLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-body">
                            <h4 class="modal-title" id="deletionLabel">Confirm Deletion?</h4>
                            Clicking confirm will permanently delete this location.  Do you wish to continue?
                            <div>
                                <small>This will fail if the location contains areas, you must delete the areas within the location first.</small>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button id="closeButton" type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button id="deleteButton" type="button" class="btn btn-danger">Confirm Delete</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-lg-8">
            <div class="row">
                <div class="col-lg-12">
                    <label>Name</label>
                </div>
                <div class="col-lg-12">
                    @Model.Name
                </div>
            </div>
        </div>
        <div class="col-lg-2">
            <div class="row">
                <div class="col-lg-12">
                    <label>Created</label>
                </div>
                <div class="col-lg-12">
                    @Model.CreateDate
                </div>
            </div>
        </div>
        <div class="col-lg-2">
            @if (Model.UpdateDate != null)
            {
                <div class="row">
                    <div class="col-lg-12">
                        <label>Updated</label>
                    </div>
                    <div class="col-lg-12">
                        @Model.UpdateDate
                    </div>
                </div>
            }
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-lg-6">
            <div class="row">
                <div class="col-lg-12">
                    <label>Street Address</label>
                </div>
                <div class="col-lg-12">
                    @Model.StreetAddress
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="row">
                <div class="col-lg-12">
                    <label>City</label>
                </div>
                <div class="col-lg-12">
                    @Model.City
                </div>
            </div>
        </div>
        <div class="col-lg-1">
            <div class="col-lg-12">
                <label>State</label>
            </div>
            <div class="col-lg-12">
                @Model.State
            </div>
        </div>
        <div class="col-lg-2">
            <div class="col-lg-12">
                <label>Zip Code</label>
            </div>
            <div class="col-lg-12">
                @Model.Zipcode
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-xs-6">
            <div class="row">
                <div class="col-lg-12">
                    <label>Description</label>
                </div>
                <div class="col-lg-12">
                    @Html.Raw(Model.DescriptionHtml)
                </div>
            </div>
        </div>
        <div class="col-xs-6">
            <div class="row">
                <div class="col-lg-12">
                    <label>Location Image</label>
                </div>
                <div class="col-lg-12">
                    @if (Model.AssetLocation != null)
                    {
                        <img src="@Model.AssetLocation.FullPath()" class="img-fluid img-thumbnail col-xs-12" id="areaMapImage" alt="@Model.Name Area Map Image">
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Back to List", "ClientLocations", new { id = Model.ClientId })
</p>

<div id="locationDetails" data-locationid="@Model.Id" data-clientid="@Model.ClientId" class="hidden"></div>

<script>
    $(document).on('click', '#deleteButton', function(){
        deleteLocation();
    });

    function deleteLocation() {
        var details = $('#locationDetails');
        var locationId = details.data("locationid");
        var clientId = details.data("clientid");
        $.ajax({
            type: "POST",
            url: '@Url.Action("Delete")',
            data: { id: locationId },
            success: function(response){
                if (response) {
                    $('#closeButton').click();
                    $('#errorMessage').html("<i class=\"fa fa-exclamation-circle\" aria-hidden=\"true\"></i> <strong>Error!</strong> " + response);
                    $('#errorMessage').removeClass("hidden");
                }else{
                    window.location.href = "/Location/ClientLocations/" + clientId;
                }
            },
            error: function () {
                $('#closeButton').click();
                $('#errorMessage').html("<i class=\"fa fa-exclamation-circle\" aria-hidden=\"true\"></i> <strong>Error!</strong> Failed to delete current area. please try again later.");
                $('#errorMessage').removeClass("hidden");
            }
        });
    }
</script>