@model VirtualTourCore.Core.Models.Client
<hr />
@if (Model != null && Model.Id == 0)
{
    <h2>Create New Client</h2>
}
else
{
    <h2>Edit Client Details</h2>
}
<hr />
@using (Html.BeginForm("ModifyClients", "Client", FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "return GetDescription()", @id = "clientForm" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.Id)
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="form-group col-lg-6">
            @Html.LabelFor(model => model.Name)
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @placeholder = "Your Name", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-lg-6">
            @Html.LabelFor(model => model.Link)
            @Html.EditorFor(model => model.Link, new { htmlAttributes = new { @placeholder = "Your Website Link", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Link, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-lg-6">
            @Html.LabelFor(model => model.StreetAddress)
            @Html.EditorFor(model => model.StreetAddress, new { htmlAttributes = new { @placeholder = "Your Street Address", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.StreetAddress, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-lg-3">
            @Html.LabelFor(model => model.City)
            @Html.EditorFor(model => model.City, new { htmlAttributes = new { @placeholder = "Your City", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-lg-1">
            @Html.LabelFor(model => model.State)
            @Html.EditorFor(model => model.State, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-lg-2">
            @Html.LabelFor(model => model.Zipcode)
            @Html.EditorFor(model => model.Zipcode, new { htmlAttributes = new { @placeholder = "Your Zip Code", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Zipcode, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-lg-4">
            @Html.LabelFor(model => model.Phone)
            @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @placeholder = "Your Phone Number", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-lg-4">
            @Html.LabelFor(model => model.SupportEmail)
            @Html.EditorFor(model => model.SupportEmail, new { htmlAttributes = new { @placeholder = "Your Support Email Address", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SupportEmail, "", new { @class = "text-danger" })
        </div>
        <div class="form-group  col-lg-4">
            @Html.LabelFor(model => model.MarketingEmail)
            @Html.EditorFor(model => model.MarketingEmail, new { htmlAttributes = new { @placeholder = "Your Marketing Email Address", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MarketingEmail, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="form-group col-lg-6">
            @Html.Label("Client Logo")
            <div class="input-group">
                <label class="input-group-btn">
                    <span class="btn btn-default">
                        Browse&hellip; <input type="file" name="logo" data-target="logoImage" class="imgInp" style="display: none;">
                    </span>
                </label>
                <input type="text" class="form-control" readonly>
                <span class="btn btn-default input-group-addon" data-toggle="collapse" data-target="#logoImage" 
                      aria-expanded="false" aria-controls="logoImage" id="logoDisplayBtn"><i id="logoToggle" class="fa fa-toggle-off" aria-hidden="true"></i></span>
            </div>
            <img src="" class="uploadImgHolder collapse img-fluid img-thumbnail col-xs-12" data-role="collapsible" id="logoImage" alt="Logo Thumbnail">
        </div>
        <div class="form-group col-lg-6">
            @Html.Label("Profile Image")
            <div class="input-group">
                <label class="input-group-btn">
                    <span class="btn btn-default">
                        Browse&hellip; <input type="file" name="profile" data-target="profileImage" class="imgInp" style="display: none;">
                    </span>
                </label>
                <input type="text" class="form-control" readonly>
                <span class="btn btn-default input-group-addon" data-toggle="collapse" data-target="#profileImage" 
                      aria-expanded="false" aria-controls="profileImage" id="profileDisplayBtn"><i id="profileToggle" class="fa fa-toggle-off" aria-hidden="true"></i></span>
            </div>
            <img src="" class="uploadImgHolder collapse img-fluid img-thumbnail col-xs-12" id="profileImage" alt="Profile Image">
        </div>
    </div>
    @Html.HiddenFor(model => model.Description)
    @Html.HiddenFor(model => model.DescriptionHtml)
    @Html.HiddenFor(model => model.DescriptionJson)
    }
    @Html.LabelFor(model => model.Description)
    <div id="clientDescription"></div>

    <div class="row">
        <div class="form-group col-xs-12">
            @if (Model != null && Model.Id == 0)
            {
                <input type="submit" onclick="$('#clientForm').submit()" value="Create" class="btn btn-default" />
            }
            else
            {
                <input type="submit" onclick="$('#clientForm').submit()" value="Update" class="btn btn-default" />
            }
        </div>
        <div class="col-xs-12">
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>

    <script>
        $(function () {

            // We can attach the `fileselect` event to all file inputs on the page
            $(document).on('change', ':file', function () {
                var input = $(this),
                    numFiles = input.get(0).files ? input.get(0).files.length : 1,
                    label = input.val().replace(/\\/g, '/').replace(/.*\//, '');
                input.trigger('fileselect', [numFiles, label]);
                if($(this).data("target").indexOf("logo") == 0 && $('#logoToggle').hasClass("fa-toggle-off"))
                {
                    $('#logoToggle').click();
                }
                if ($(this).data("target").indexOf("profile") == 0 && $('#profileToggle').hasClass("fa-toggle-off")) {
                    $('#profileToggle').click();
                }
            });

            // We can watch for our custom `fileselect` event like this
            $(document).ready(function () {
                $(".imgInp").change(function () {
                    readURL(this, $(this).attr("data-target"));
                });
                function readURL(input, target) {
                    if (input.files && input.files[0]) {
                        var reader = new FileReader();
                        reader.onload = function (e) {
                            $('#' + target).attr('src', e.target.result);
                        }
                        reader.readAsDataURL(input.files[0]);
                        //updateThumbnail(input, target);
                    }
                }

                setTimeout(function () {
                    $('#logoImage').on('shown.bs.collapse', function () {
                        $('#logoToggle').removeClass("fa-toggle-off");
                        $('#logoToggle').addClass("fa-toggle-on");
                    });
                    $('#logoImage').on('hidden.bs.collapse', function () {
                        $('#logoToggle').removeClass("fa-toggle-on");
                        $('#logoToggle').addClass("fa-toggle-off");
                    });
                }, 1000);

                setTimeout(function () {
                    $('#profileImage').on('shown.bs.collapse', function () {
                        $('#profileToggle').removeClass("fa-toggle-off");
                        $('#profileToggle').addClass("fa-toggle-on");
                    });
                    $('#profileImage').on('hidden.bs.collapse', function () {
                        $('#profileToggle').removeClass("fa-toggle-on");
                        $('#profileToggle').addClass("fa-toggle-off");
                    });
                }, 1000);
            });

        });

        var toolbarOptions = [
                    ['bold', 'italic', 'underline', 'strike'],
                    ['blockquote', 'code-block'],
                    [{ 'header': 1 }, { 'header': 2 }],
                    [{ 'list': 'ordered' }, { 'list': 'bullet' }],
                    [{ 'script': 'sub' }, { 'script': 'super' }],
                    [{ 'indent': '-1' }, { 'indent': '+1' }],
                    [{ 'size': ['small', false, 'large', 'huge'] }],
                    ['link', 'image', 'video'],
                    [{ 'color': [] }, { 'background': [] }],
                    [{ 'font': [] }],
                    [{ 'align': [] }]
        ];
        var options = {
            debug: 'info',
            modules: {
                toolbar: toolbarOptions
            },
            placeholder: 'This will appear on the about page with your details... if you add anything.',
            readOnly: false,
            theme: 'snow'
        };
        var quill = new Quill('#clientDescription', options);
        quill.setContents(JSON.parse($('#DescriptionJson').val()));//set init value
        function GetDescription() //display current HTML
        {
            var html = quill.root.innerHTML;
            $('#DescriptionJson').val(JSON.stringify(quill.getContents()));
            $('#DescriptionHtml').val(html);
            $('#Description').val(quill.getText());
            return true;
        }
    </script>
