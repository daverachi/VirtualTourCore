@model VirtualTourCore.Core.Models.Tour

@{
    ViewBag.Title = "Tour Details";
}
<div>
    <hr />
    <div class="row">
        <div class="col-xs-12 alert alert-danger hidden" role="alert" id="errorMessage"></div>
        <div class="col-xs-1">
            <div class="adminHeadingText">Details</div>
        </div>
        <div class="col-xs-1">
            <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn">
                <i class="fa fa-2x fa-pencil" aria-hidden="true"></i>
            </a>
        </div>
        <div class="col-xs-9">

        </div>
        <div class="col-xs-1">
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deletionModal">
                <i class="fa fa-2x fa-trash" aria-hidden="true"></i>
            </button>

            <!-- Modal -->
            <div class="modal fade" id="deletionModal" tabindex="-1" role="dialog" aria-labelledby="deletionLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-body">
                            <h4 class="modal-title" id="deletionLabel">Confirm Deletion?</h4>
                            Clicking confirm will permanently delete this tour.  Do you wish to continue?
                        </div>
                        <div class="modal-footer">
                            <button id="closeButton" type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button id="deleteButton" type="button" class="btn btn-danger">Confirm Delete</button>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-lg-8">
            <div class="row">
                <div class="col-lg-12">
                    <label>Name</label>
                </div>
                <div class="col-lg-12">
                    @Model.Name
                </div>
            </div>
        </div>
        <div class="col-lg-2">
            <div class="row">
                <div class="col-lg-12">
                    <label>Created</label>
                </div>
                <div class="col-lg-12">
                    @Model.CreateDate
                </div>
            </div>
        </div>
        <div class="col-lg-2">
            @if (Model.UpdateDate != null)
            {
            <div class="row">
                <div class="col-lg-12">
                    <label>Updated</label>
                </div>
                <div class="col-lg-12">
                    @Model.UpdateDate
                </div>
            </div>
            }
        </div>
    </div>
    <hr/>
    <div class="row">
        <div class="col-xs-4">
            <div class="row">
                <div class="col-lg-12">
                    <label>Description</label>
                </div>
                <div class="col-lg-12">
                        @Html.Raw(Model.DescriptionHtml)
                </div>
            </div>
        </div>
        <div class="col-xs-8">
            <div class="row">
                <div class="col-lg-12">
                    <label>KrPano</label>
                </div>
                <div class="col-lg-12">
                    @if (Model.KrPanoTour != null)
                    {
                        <iframe name="KRpano" id="external" frameborder="0" src=@Url.Content(Model.KrPanoTour.FullPath()) webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Back to List", "ClientTours", new { id = Model.AreaId, cId = Model.ClientId })
</p>

<div id="tourDetails" data-tourid="@Model.Id" data-areaid="@Model.AreaId" data-clientid="@Model.ClientId" class="hidden"></div>

<script>
    $(document).on('click', '#deleteButton', function(){
        deleteTour();
    });

    function deleteTour() {
        var details = $('#tourDetails');
        var tourId = details.data("tourid");
        var areaId = details.data("areaid");
        var clientId = details.data("clientid");
        $.ajax({
            type: "POST",
            url: '@Url.Action("Delete")',
            data: { id: tourId },
            success: function(response){
                if (response) {
                    $('#closeButton').click();
                    $('#errorMessage').html("<i class=\"fa fa-exclamation-circle\" aria-hidden=\"true\"></i> <strong>Error!</strong> " + response);
                    $('#errorMessage').removeClass("hidden");
                }else{
                    window.location.href = "/Tour/ClientTours/" + areaId + "?cId=" + clientId;
                }
            },
            error: function () {
                $('#closeButton').click();
                $('#errorMessage').html("<i class=\"fa fa-exclamation-circle\" aria-hidden=\"true\"></i> <strong>Error!</strong> Failed to delete current tour. please try again later.");
                $('#errorMessage').removeClass("hidden");
            }
        });
    }
</script>