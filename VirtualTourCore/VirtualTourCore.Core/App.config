<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <connectionStrings>
    <add name="VirtualTourContext" connectionString="Data Source=(LocalDb)\MSSQLLocalDB;Initial Catalog=VirtualTour;Integrated Security=True" providerName="System.Data.SqlClient" />
  </connectionStrings>
  <nlog>
    <targets>
      <target name="databaseTarget" type="Database" connectionStringName="VirtualTourContext" commandText="INSERT INTO log.Logging(Logger,LayerLevel,LogLevel,Message,Exception,Stacktrace,MachineName) VALUES (@logger,@layerlevel,@level,@message,@log_exception,@stacktrace,@machinename)">
        <parameter name="@logger" layout="${logger}" />
        <parameter name="@layerlevel" layout="${event-context:item=LayerLevel}" />
        <parameter name="@level" layout="${level}" />
        <parameter name="@message" layout="${message}" />
        <parameter name="@log_exception" layout="${exception:format=Type}" />
        <parameter name="@stacktrace" layout="${exception:format=StackTrace}" />
        <parameter name="@machinename" layout="${event-context:item=Machine}" />
      </target>
      <target name="fileTarget" type="File" fileName="${basedir}/logs/${shortdate}.log" layout="${longdate} (${threadid}) ${uppercase:${level}} ${message}" />
    </targets>
    <rules>
      <logger name="*" minlevel="Trace" writeTo="databaseTarget" />
      <logger name="*" minlevel="Trace" writeTo="fileTarget" />
    </rules>
  </nlog>
  <configSections>
    <section name="entityFramework" type="System.Data.Entity.Internal.ConfigFile.EntityFrameworkSection, EntityFramework, Version=6.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />
  <!-- For more information on Entity Framework configuration, visit http://go.microsoft.com/fwlink/?LinkID=237468 --></configSections>
  <entityFramework>
    <defaultConnectionFactory type="System.Data.Entity.Infrastructure.LocalDbConnectionFactory, EntityFramework">
      <parameters>
        <parameter value="mssqllocaldb" />
      </parameters>
    </defaultConnectionFactory>
    <providers>
      <provider invariantName="System.Data.SqlClient" type="System.Data.Entity.SqlServer.SqlProviderServices, EntityFramework.SqlServer" />
    </providers>
  </entityFramework>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-6.0.0.0" newVersion="6.0.0.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>