@model IEnumerable<VirtualTourCore.Api.Models.ClientVO>

@{
    ViewBag.Title = "Index";
}

<h2>Clients</h2>

<p>
    @if(User.IsInRole("Admin")){
        @Html.ActionLink("Create New", "Create")
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Client.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Client.Link)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Client.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.Link)
                @if (!string.IsNullOrWhiteSpace(item.Client.Link))
                {
                    <a href="@item.Client.Link" target="_blank"><i class="fa fa-external-link" aria-hidden="true"></i></a>
                }
            </td>
            <td>
                @if (item.IsModifiable)
                {
                    @Html.ActionLink("Edit ", "Edit", new { id = item.Client.Id }) 
                    @Html.ActionLink(" Manage Locations ", "ClientLocations", "Location", new { id = item.Client.Id }, null)
                    @Html.ActionLink(" Delete", "Delete", new { id = item.Client.Id })
                }
            </td>

        </tr>
    }
</table>
